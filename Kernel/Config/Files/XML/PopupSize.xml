<?xml version="1.0" encoding="utf-8" ?>
<otobo_config version="2.0" init="Application">
    <Setting Name="Frontend::Output::FilterContent###PopupSize" Required="0" Valid="1">
        <Description Translatable="1">Adjust size and position of Core.UI.Popup windows</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterContent::PopupSize</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="ALL">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Value>
    </Setting>
    <Setting Name="PopupSize::Width" Required="1" Valid="1">
        <Description Translatable="1">Defines the popup width in pixel or percent.</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+%?$">1040</Item>
        </Value>
    </Setting>
    <Setting Name="PopupSize::Height" Required="1" Valid="1">
        <Description Translatable="1">Defines the popup height in pixel or percent.</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+%?$">700</Item>
        </Value>
    </Setting>
    <Setting Name="PopupSize::Center" Required="1" Valid="1">
        <Description Translatable="1">Popup position centered or fixed top/left</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Item ValueType="Select" SelectedID="1">
                <Item ValueType="Option" Value="1" Translatable="1">Centered</Item>
                <Item ValueType="Option" Value="0" Translatable="1">Fixed (Top/Left)</Item>
            </Item>
        </Value>
    </Setting>
    <Setting Name="PopupSize::Top" Required="1" Valid="1">
        <Description Translatable="1">Defines the popup top position in pixel</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+$">100</Item>
        </Value>
    </Setting>
    <Setting Name="PopupSize::Left" Required="1" Valid="1">
        <Description Translatable="1">Defines the popup left position in pixel</Description>
        <Navigation>Core</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+$">100</Item>
        </Value>
    </Setting>
</otobo_config>
